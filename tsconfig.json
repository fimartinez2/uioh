{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@tokens": ["./src/tokens"],
      "@tokens/*": ["./src/tokens/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"]
    }
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
